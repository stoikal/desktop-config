# A more modern dmenu replacement is rofi:
bindsym $mod+d exec "rofi -modi drun,run,window -show drun -theme /home/xlwp/Projects/personal/desktop-config/config/rofi/themes/DarkBlueFork.rasi"
bindsym $mod+Shift+d exec "rofi -modi drun,run,window -show run -theme /home/xlwp/Projects/personal/desktop-config/config/rofi/themes/DarkBlueFork.rasi"
